<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/card_view_style"
    android:id="@+id/order_type_layout_container"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/card_view_container_style"
        android:orientation="vertical">

        <TextView
            style="@style/text_style.NORMAL_DARK"
            android:text="@string/select_one"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/order_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/order_type_rb_venue"
                style="@style/radio_button_style"
                android:layout_marginLeft="0dip"
                android:layout_marginStart="0dip"
                android:text="@string/at_venue" />

            <RadioButton
                android:id="@+id/order_type_rb_on_my_way"
                style="@style/radio_button_style"
                android:text="@string/on_my_way" />
        </RadioGroup>

        <include layout="@layout/spinner_seating_place_layout" />

        <include layout="@layout/radio_group_on_my_way_layout" />
    </LinearLayout>

</android.support.v7.widget.CardView>