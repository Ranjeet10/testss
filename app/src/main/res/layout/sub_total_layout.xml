<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_view_style"
    android:id="@+id/sub_total_layout_parent"
    android:layout_marginTop="0dp">

    <LinearLayout
        style="@style/card_view_container_style"
        android:orientation="vertical">

        <RelativeLayout style="@style/cart_account_list_holder_style">

            <android.support.v7.widget.AppCompatTextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:text="@string/sub_total" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/sub_total_text_view"
                style="@style/cart_account_value_style" />
        </RelativeLayout>

        <RelativeLayout style="@style/cart_account_list_holder_style">

            <android.support.v7.widget.AppCompatTextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:text="@string/service_charge" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/service_charge_text_view"
                style="@style/cart_account_value_style" />
        </RelativeLayout>

        <RelativeLayout style="@style/cart_account_list_holder_style">

            <android.support.v7.widget.AppCompatTextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:text="@string/vat" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/vat_text_view"
                style="@style/cart_account_value_style" />
        </RelativeLayout>

        <RelativeLayout style="@style/cart_account_list_holder_style">

            <android.support.v7.widget.AppCompatTextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:text="@string/grand_total"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/grand_total_text_view"
                style="@style/cart_account_value_style"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>