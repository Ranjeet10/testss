<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_detail" />

    <TextView
        android:id="@+id/venue_name"
        style="@style/text_style.SUB_HEAD_LINE_DARK"
        android:layout_margin="@dimen/_10sdp" />

    <TextView
        style="@style/text_style.NORMAL_DARK"
        android:padding="@dimen/_10sdp"
        android:text="@string/support_desc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_selector"
            android:src="@drawable/ic_email" />

        <TextView
            android:id="@+id/sales_support_email"
            style="@style/text_style.SUB_HEAD_LINE_DARK"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/sales_email_address"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        style="@style/text_style.NORMAL_DARK"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/technical_support_desc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent_selector"
            android:src="@drawable/ic_email" />

        <TextView
            android:id="@+id/technical_support_email"
            style="@style/text_style.SUB_HEAD_LINE_DARK"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/technical_support_email"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>