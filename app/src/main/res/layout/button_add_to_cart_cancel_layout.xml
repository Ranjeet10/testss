<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/cancel_btn"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_cancel_selector">

        <TextView
            style="@style/button_text_style"
            android:drawableLeft="@mipmap/ic_close_white_24dp"
            android:drawablePadding="3dip"
            android:drawableStart="@mipmap/ic_close_white_24dp"
            android:text="@string/cancel" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_to_cart_btn"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_ok_selector">

        <TextView
            style="@style/button_text_style"
            android:drawableLeft="@mipmap/ic_add_shopping_cart_white_24dp"
            android:drawablePadding="3dip"
            android:drawableStart="@mipmap/ic_add_shopping_cart_white_24dp"
            android:text="@string/add_to_cart" />
    </RelativeLayout>
</LinearLayout>