<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/khalti_button_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible"
        android:background="@drawable/transparent_selector"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:src="@drawable/khalti" />

        <TextView
            style="@style/text_style.NORMAL_DARK"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_1sdp"
            android:text="@string/khalti" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topup_with_esewa"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/transparent_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_esewa_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/esewa" />

        <TextView
            style="@style/text_style.NORMAL_DARK"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_1sdp"
            android:text="@string/esewa" />
    </LinearLayout>

</LinearLayout>