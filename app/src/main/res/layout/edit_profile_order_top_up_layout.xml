<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:background="@color/profile_badge"
    android:orientation="horizontal"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:layout_gravity="center"
                android:text="@string/no_of_order" />

            <TextView
                style="@style/text_style.NORMAL_DARK"
                android:layout_gravity="center"
                android:text="@string/amount_value"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/dot_dot_view_vertical" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                style="@style/text_style.NORMAL_CAPTION_DARK"
                android:layout_gravity="center"
                android:text="@string/no_of_top_up" />

            <TextView
                style="@style/text_style.NORMAL_DARK"
                android:layout_gravity="center"
                android:text="@string/amount_value"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>