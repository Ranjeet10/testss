<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@drawable/custom_divider</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.FinestWebView">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="toolbar_navigation_style">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/transparent_selector</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_style.HEAD_LINE_LIGHT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="text_style.HEAD_LINE_DARK">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="text_style.TOP_HEAD_LINE_DARK">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_40sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_style.SUB_HEAD_LINE_DARK">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="text_style.SUB_HEAD_LINE_VERY_DARK">
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="text_style.SUB_HEAD_LINE_LIGHT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="text_style.NORMAL_DARK">
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="text_style.NORMAL_LIGHT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="text_style.NORMAL_CAPTION_DARK">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="text_style.NORMAL_CAPTION_LIGHT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="text_style.NORMAL_BODY_DARK">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="text_style.TABLE">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_style.TABLE_KEY">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="text_style.NORMAL_BODY_LIGHT">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="nested_scroll_view_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="nested_scroll_view_container_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="card_view_style" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">0.5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="card_view_container_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dip</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="radio_button_style" parent="text_style.NORMAL_DARK">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="buttonTint">@color/colorPrimary</item>
    </style>

    <style name="plus_minus_btn_style">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:background">@drawable/plus_minus_selector</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="plus_minus_btn_style.SINGLE_ROW">
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:background">@drawable/plus_minus_cricle</item>
    </style>

    <style name="button_text_style" parent="text_style.NORMAL_CAPTION_LIGHT">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="button_normal_style" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_normal_style.CANCEL">
        <item name="android:background">@drawable/btn_cancel_selector</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button_normal_style.PROCEED">
        <item name="android:background">@drawable/btn_selector_in_primary_bg</item>
        <item name="android:layout_width">@dimen/_150sdp</item>
    </style>

    <style name="cart_account_list_holder_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
    </style>

    <style name="cart_account_value_style" parent="text_style.NORMAL_CAPTION_DARK">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:text">@string/total_value</item>
    </style>

    <style name="btn_add_more_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:background">@drawable/list_item_selector</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="edit_text_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="auto_fill_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">1dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/auto_fill_edit_text_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:padding">10dip</item>
        <item name="android:hint">0</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="login_sign_up_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="login_sign_up_edit_text.REGISTER">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">@drawable/edit_text_under_line</item>
    </style>

    <style name="edit_profile_edit_text" parent="login_sign_up_edit_text.REGISTER">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="login_sign_up_edit_text.USER">
        <item name="android:background">@null</item>
    </style>

    <!--Setting Preference screen-->
    <style name="child_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="child_container.LIST">
        <item name="android:background">@drawable/transparent_selector</item>
    </style>

    <style name="left_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="dot_view_style">
        <item name="android:layout_height">@dimen/_3sdp</item>
        <item name="android:layout_width">@dimen/_3sdp</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
    </style>

    <style name="edit_profile_label" parent="text_style.NORMAL_BODY_DARK">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="table_row_image">
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_width">@dimen/_20sdp</item>
    </style>

    <style name="bill_row_style_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">#2c749b</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="bill_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#484949</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="bill_row_style_nomargin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">4dp</item>
    </style>
</resources>
